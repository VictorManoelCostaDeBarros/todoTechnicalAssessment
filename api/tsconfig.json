{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "removeComments": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./build",
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
